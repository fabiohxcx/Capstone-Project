<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="fabiohideki.com.megagenerator.ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_less"
            ads:adSize="BANNER"
            ads:adUnitId="@string/AdUnitIdHome"></com.google.android.gms.ads.AdView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_homefragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_less"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_less">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv_card_concurso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:elevation="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/material_text_title"
                    android:textStyle="bold"
                    tools:text="Concurso 1935" />

                <TextView
                    android:id="@+id/tv_card_concurso_acumulou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:text="@string/label_acumulou"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_card_concurso" />


                <TextView
                    android:id="@+id/bola1"
                    android:layout_width="@dimen/ball_size"
                    android:layout_height="@dimen/ball_size"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bola"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/bola2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_card_concurso_acumulou"
                    tools:text="01" />


                <TextView
                    android:id="@+id/bola2"
                    android:layout_width="@dimen/ball_size"
                    android:layout_height="@dimen/ball_size"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bola"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/bola1"
                    app:layout_constraintEnd_toStartOf="@+id/bola3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/bola1"
                    app:layout_constraintTop_toTopOf="@+id/bola1"
                    tools:text="02" />

                <TextView
                    android:id="@+id/bola3"
                    android:layout_width="@dimen/ball_size"
                    android:layout_height="@dimen/ball_size"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bola"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/bola2"
                    app:layout_constraintEnd_toStartOf="@+id/bola4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/bola2"
                    app:layout_constraintTop_toTopOf="@+id/bola2"
                    tools:text="03" />

                <TextView
                    android:id="@+id/bola4"
                    android:layout_width="@dimen/ball_size"
                    android:layout_height="@dimen/ball_size"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bola"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/bola3"
                    app:layout_constraintEnd_toStartOf="@+id/bola5"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/bola3"
                    app:layout_constraintTop_toTopOf="@+id/bola3"
                    tools:text="04" />

                <TextView
                    android:id="@+id/bola5"
                    android:layout_width="@dimen/ball_size"
                    android:layout_height="@dimen/ball_size"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bola"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/bola4"
                    app:layout_constraintEnd_toStartOf="@+id/bola6"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/bola4"
                    app:layout_constraintTop_toTopOf="@+id/bola4"
                    tools:text="05" />

                <TextView
                    android:id="@+id/bola6"
                    android:layout_width="35dp"
                    android:layout_height="@dimen/ball_size"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bola"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/bola5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/bola5"
                    app:layout_constraintTop_toTopOf="@+id/bola5"
                    tools:text="06" />

                <TextView
                    android:id="@+id/title_sena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/card_title_sena"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bola1" />


                <TextView
                    android:id="@+id/tv_result_sena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_sena"
                    tools:text="Não houve acertador" />

                <TextView
                    android:id="@+id/title_quina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/card_title_quina"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_result_sena" />


                <TextView
                    android:id="@+id/tv_result_quina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_quina"
                    tools:text="Não houve acertador" />

                <TextView
                    android:id="@+id/title_quadra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/card_title_quadra"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_result_quina" />

                <TextView
                    android:id="@+id/tv_result_quadra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_quadra"
                    tools:text="Não houve acertador" />


                <TextView
                    android:id="@+id/title_data_prox_concurso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Próx. concurso:"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/material_text_body1"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_result_quadra" />

                <TextView
                    android:id="@+id/tv_data_prox_concurso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/title_data_prox_concurso"
                    app:layout_constraintTop_toBottomOf="@+id/tv_result_quadra"
                    tools:text="12/12/2016 (Amanhã)" />

                <TextView
                    android:id="@+id/title_valor_prox_concurso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Valor estimado:"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/material_text_body1"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_data_prox_concurso" />

                <TextView
                    android:id="@+id/tv_valor_prox_concurso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/title_valor_prox_concurso"
                    app:layout_constraintTop_toBottomOf="@+id/title_data_prox_concurso"
                    tools:text="R$ 3.333.333,00" />

                <ImageButton
                    android:id="@+id/bt_card_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/share_variant"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_valor_prox_concurso" />


                <com.victor.loading.rotate.RotateLoading
                    android:id="@+id/rotateloading"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loading_color="@color/colorAccent"
                    app:loading_width="5dp" />

                <ImageButton
                    android:id="@+id/bt_retry"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/autorenew"
                    android:tint="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/bt_card_share" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
