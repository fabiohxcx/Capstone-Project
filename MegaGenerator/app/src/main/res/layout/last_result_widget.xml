<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_widget_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin"
    android:background="@drawable/background_widget"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_less">


    <LinearLayout
        android:id="@+id/widget_ll_number_result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_less"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_less"
            android:contentDescription="@string/logo_app_content_description"
            android:src="@drawable/mega2" />

        <TextView
            android:id="@+id/widget_tv_item_result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_less"
            android:textColor="@color/colorPrimaryDark"
            tools:text="2010 (06/02/2010)" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_ll_balls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/widget_bola1"
            android:layout_width="@dimen/ball_size_small"
            android:layout_height="@dimen/ball_size_small"
            android:layout_marginRight="5dp"
            android:background="@drawable/bola"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="01" />

        <TextView
            android:id="@+id/widget_bola2"
            android:layout_width="@dimen/ball_size_small"
            android:layout_height="@dimen/ball_size_small"
            android:layout_marginRight="5dp"
            android:background="@drawable/bola"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="02" />

        <TextView
            android:id="@+id/widget_bola3"
            android:layout_width="@dimen/ball_size_small"
            android:layout_height="@dimen/ball_size_small"
            android:layout_marginRight="5dp"
            android:background="@drawable/bola"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="02" />

        <TextView
            android:id="@+id/widget_bola4"
            android:layout_width="@dimen/ball_size_small"
            android:layout_height="@dimen/ball_size_small"
            android:layout_marginRight="5dp"
            android:background="@drawable/bola"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="02" />

        <TextView
            android:id="@+id/widget_bola5"
            android:layout_width="@dimen/ball_size_small"
            android:layout_height="@dimen/ball_size_small"
            android:layout_marginRight="5dp"
            android:background="@drawable/bola"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="02" />

        <TextView
            android:id="@+id/widget_bola6"
            android:layout_width="@dimen/ball_size_small"
            android:layout_height="@dimen/ball_size_small"
            android:background="@drawable/bola"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="02" />
    </LinearLayout>

</LinearLayout>